<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OcrActivity2">

    <ImageView
        android:id="@+id/iv_image_view"
        android:layout_width="match_parent"
        android:layout_height="450sp" />

    <TextView
        android:id="@+id/tv_text_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image_view"
        android:layout_margin="5sp"
        android:maxLines="7"
        android:text="Display Detected Text from image"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDetectTextFromImage"
        android:background="@color/white"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_marginBottom="10sp"
        android:text="Capture image"
        android:onClick="onBtnCaptureImageClick"/>

    <Button
        android:id="@+id/btnDetectTextFromImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:text="Detect Text"
        android:onClick="onBtnDetectTextClick"
        />


</RelativeLayout>